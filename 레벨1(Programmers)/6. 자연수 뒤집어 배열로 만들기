class Solution {
    public int[] solution(long n) {
        int[] answer = {};
        
        String nStr = Long.toString(n);
        int len = nStr.length();
        answer = new int[len];
        
        for(int i = 0; i < len; i++){
            answer[i] = nStr.charAt((len-1)-i) - '0';
        }
        
        return answer;
    }
}
